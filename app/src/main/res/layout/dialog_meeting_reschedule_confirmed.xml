<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:src="@drawable/meeting_accept"></ImageView>
        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_17dp"
            android:layout_below="@id/img_02"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/darkGreyBlue"
            android:text="@string/meeting_request_success" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"></TextView>
            <TextView
                android:id="@+id/label_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16dp"
                android:layout_below="@id/img_02"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_10dp"
                android:textColor="@color/terracota"
                android:text="@string/close" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>