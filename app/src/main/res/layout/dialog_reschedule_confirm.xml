<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_avail"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30dp"
            android:padding="@dimen/_5dp"
            android:backgroundTint="@color/butterscotch"
            android:background="@drawable/bg_circle_yellow">
            <ImageView
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_clock"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                ></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_18dp"
            android:layout_below="@id/img_02"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/darkGreyBlue"
            android:text="@string/meeting_reschedule_msg" />

        <Button
            android:id="@+id/btn_reschedule"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/_50dp"
            android:textSize="@dimen/_18dp"
            android:layout_marginLeft="@dimen/_50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20dp"
            android:background="@drawable/filled_circle_terracota"
            android:textColor="@color/whiteTwo"
            android:fontFamily="@font/roboto_regular"
            android:text="Reschedule"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"></TextView>
            <TextView
                android:id="@+id/label_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16dp"
                android:layout_below="@id/img_02"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_10dp"
                android:textColor="@color/terracota"
                android:text="@string/close" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>