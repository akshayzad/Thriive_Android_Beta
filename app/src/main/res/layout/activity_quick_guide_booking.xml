<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    tools:context=".QuickGuideBookingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_background_fragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_weight="0"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"></ImageView>
            <TextView
                android:id="@+id/label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10dp"
                android:textColor="@color/darkGreyBlue"
                android:text="Meeting Request" />
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <LinearLayout
                    android:id="@+id/layout_meeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/darkGreyBlue"
                        android:textSize="@dimen/_16dp"
                        android:layout_margin="1dp"
                        android:text="@string/label_meeting_request"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/darkGreyBlue"
                        android:textSize="@dimen/_14dp"
                        android:layout_margin="1dp"
                        android:text="@string/label_meeting_request1"></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/circle_white"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_13dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:text="@string/consulting"></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/circle_white"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_13dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:text="Business Guru"></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_expertise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_expertise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_16dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/darkGreyBlue"
                            android:text="Expertise" />
                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5dp"
                            android:textSize="@dimen/_12dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_search"
                            android:backgroundTint="#CCFFFFFF"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:background="@drawable/rectangle_white"
                            android:layout_marginLeft="@dimen/_10dp"></EditText>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_expertise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_domain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_16dp"
                            android:textColor="@color/darkGreyBlue"
                            android:text="Domain" />
                        <ImageView
                            android:layout_width="@dimen/_25dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_search"></ImageView>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_subdomain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_subdomain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_16dp"
                            android:textColor="@color/darkGreyBlue"
                            android:text="Subdomain" />
                        <ImageView
                            android:layout_width="@dimen/_25dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_search"></ImageView>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_subdomain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_16dp"
                            android:textColor="@color/darkGreyBlue"
                            android:text="Region" />
                        <ImageView
                            android:layout_width="@dimen/_25dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_search"></ImageView>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_meeting_preference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_meeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_16dp"
                            android:textColor="@color/darkGreyBlue"
                            android:text="Meeting preference" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:background="@drawable/background_expertise"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Audio"
                            android:padding="@dimen/_7dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/darkGrey"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/circle_white"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:padding="@dimen/_7dp"
                            android:text="Video"
                            android:textAlignment="center"
                            android:textColor="@color/terracota"></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In Person"
                            android:layout_weight="1"
                            android:padding="@dimen/_7dp"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/darkGrey"></TextView>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_request_meeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_margin="@dimen/_20dp"
                        android:background="@drawable/filled_circle_terracota"
                        android:textColor="@color/whiteTwo"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/request_meeting"></Button>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_13dp"
                        android:textAlignment="center"
                        android:text="1/2"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textColor="@color/darkGrey"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_13dp"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:textAlignment="center"
                        android:text="You can request only two meetings a week"
                        android:textColor="@color/darkGrey"></TextView>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>