<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_weight="0"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"></ImageView>
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:padding="@dimen/_10dp"
                android:textColor="@color/darkGreyBlue"
                android:text="Forget Password" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_14dp"
            android:padding="1dp"
            android:layout_marginTop="@dimen/_5dp"
            android:textColor="@color/darkGrey"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_25dp"></TextView>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12dp"
            android:layout_marginLeft="@dimen/_22dp"
            android:layout_marginRight="@dimen/_22dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:hint="@string/email"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_14dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/reactangle_grey_outline"></EditText>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:background="@drawable/filled_circle_terracota"

            android:textColor="@color/whiteTwo"
            android:text="Submit" />

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>