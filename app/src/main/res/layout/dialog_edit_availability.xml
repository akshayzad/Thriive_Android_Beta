<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_background_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_weight="0"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"></ImageView>
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:padding="@dimen/_10dp"
                android:textColor="@color/darkGreyBlue"
                android:text="Your Availability" />
            <TextView
                android:id="@+id/label_subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/_12dp"
                android:layout_below="@id/label_title"
                android:textAlignment="center"
                android:textColor="@color/darkGreyBlue"
                android:text="(Swipe left to edit) " />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>
        <com.thriive.app.utilities.swipeablerv.SwipeableRecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rightBgColor="@color/darkGrey"
            app:rightText="Edit"
            android:visibility="gone"
            app:textColor="@android:color/white"
            app:textSize="20sp" />
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/filled_circle_terracota"
            android:textColor="@color/whiteTwo"
            android:textSize="@dimen/_14dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/confirm"></Button>


    </LinearLayout>

</LinearLayout>