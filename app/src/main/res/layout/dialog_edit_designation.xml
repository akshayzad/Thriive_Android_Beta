<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_weight="0"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"></ImageView>
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:padding="@dimen/_14dp"
                android:textColor="@color/darkGreyBlue"
                android:text="Edit Designation" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/designation"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14dp"
                android:layout_marginTop="@dimen/_10dp"
                android:padding="3dp"
                android:textColor="@color/darkGrey"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_25dp"></TextView>


            <EditText
                android:id="@+id/edt_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12dp"
                android:layout_marginLeft="@dimen/_22dp"
                android:layout_marginRight="@dimen/_22dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:hint="Type Designation Name"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14dp"
                android:inputType="textCapWords"
                android:background="@drawable/reactangle_grey_outline"></EditText>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:background="@drawable/filled_circle_terracota"

                android:textColor="@color/whiteTwo"
                android:text="Submit" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>