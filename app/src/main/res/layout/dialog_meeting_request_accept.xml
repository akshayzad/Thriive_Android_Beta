<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_close"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_weight="0"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_10dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_close"></ImageView>
                    <TextView
                        android:id="@+id/label_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:padding="@dimen/_10dp"
                        android:textColor="@color/darkGreyBlue"
                        android:text="Meeting Request Detail" />


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10dp"
                    android:layout_margin="@dimen/_5dp"
                    app:cardElevation="@null"
                    app:cardBackgroundColor="@color/beige"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.thriive.app.utilities.CircleImageView
                                android:id="@+id/img_user"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:layout_weight="0"
                                android:src="@drawable/ic_edit_profile"></com.thriive.app.utilities.CircleImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/_5dp">
                                <TextView
                                    android:id="@+id/txt_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_18dp"
                                    android:padding="1dp"
                                    android:textColor="@color/darkGreyBlue"
                                    android:text="Ashish Ashraful" />
                                <TextView
                                    android:id="@+id/txt_profession"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="1dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_16dp"
                                    android:textColor="@color/darkGrey"
                                    android:text="Business Analyst" />
                                <TextView
                                    android:id="@+id/txt_persona"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_16dp"
                                    android:padding="1dp"
                                    android:visibility="gone"
                                    android:textColor="@color/darkGreyBlue"
                                    android:text="Bshish Ashraful" />


                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Area of expertise"
                            android:textSize="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:textColor="@color/darkGreyBlue"
                            android:fontFamily="@font/roboto_regular"></TextView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_expertise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txt_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Previous Experience"
                    android:textColor="@color/darkGreyBlue"
                    android:textSize="@dimen/_16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@color/darkSeaGreen"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20dp" />

                <TextView
                    android:id="@+id/txt_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_16dp"
                    android:textColor="@color/darkGreyBlue"
                    android:layout_margin="@dimen/_10dp"
                    android:textAlignment="center"
                    android:text="Meeting for fundraising" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/_10dp">
                    <LinearLayout
                        android:id="@+id/decline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/img_decline"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/decline_mr"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5dp"
                            ></ImageButton>
                        <TextView
                            android:id="@+id/txt_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_14dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:layout_marginRight="@dimen/_20dp"
                            android:textColor="@color/terracota"
                            android:text="Decline" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/img_accept"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/accept_mr"
                            android:layout_margin="@dimen/_5dp"
                            android:layout_gravity="center"></ImageButton>
                        <TextView
                            android:id="@+id/txt_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_14dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_20dp"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:textColor="@color/darkSeaGreen"
                            android:text="Accept" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>