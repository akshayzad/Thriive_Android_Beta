<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/_10dp">
            <TextView
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
              ></TextView>
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:src="@drawable/ic_close"></ImageView>

            <TextView
                android:id="@+id/txt_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:textColor="@color/terracota"
                android:layout_margin="@dimen/_10dp"
                android:text="@string/feedback" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_7dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:textColor="@color/darkGreyBlue"
                    android:fontFamily="@font/roboto_medium"
                    android:text="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="@dimen/_13dp"
                    android:background="@drawable/outline_circle"
                    android:layout_weight="0"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:textSize="@dimen/_15dp"
                        android:textColor="@color/darkGreyBlue"
                        android:text="@string/relevant_match" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_thumbs_up"
                            android:layout_width="@dimen/_33dp"
                            android:layout_height="@dimen/_33dp"
                            android:src="@drawable/thumbs_up"
                            android:layout_margin="@dimen/_10dp"></ImageView>

                        <ImageView
                            android:id="@+id/img_thumbs_down"
                            android:layout_width="@dimen/_33dp"
                            android:layout_height="@dimen/_33dp"
                            android:src="@drawable/thumb_down"
                            android:layout_margin="@dimen/_10dp"></ImageView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_7dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:textColor="@color/darkGreyBlue"
                    android:fontFamily="@font/roboto_medium"
                    android:text="2"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="@dimen/_13dp"
                    android:background="@drawable/outline_circle"
                    android:layout_weight="0"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_15dp"
                        android:lineSpacingMultiplier="1.2"
                        android:gravity="center"
                        android:textColor="@color/darkGreyBlue"
                        android:text="@string/experience" />

                    <RatingBar
                        android:id="@+id/rating_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:numStars="5"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:progressTint="#F3AF48"></RatingBar>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_7dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:textColor="@color/darkGreyBlue"
                    android:fontFamily="@font/roboto_medium"
                    android:text="3"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="@dimen/_13dp"
                    android:background="@drawable/outline_circle"
                    android:layout_weight="0"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textSize="@dimen/_15dp"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/darkGreyBlue"
                        android:text="@string/app_experience" />

                    <RatingBar
                        android:id="@+id/rating_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:numStars="5"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:progressTint="#F3AF48"></RatingBar>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_15dp"
                android:background="@color/terracota80"></TextView>


            <TextView
                android:id="@+id/txt_didntMeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5dp"
                android:textAlignment="center"
                android:textColor="@color/darkSeaGreen"
                android:textSize="@dimen/_15dp"
                android:visibility="visible"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/outline_circle_darkseagreen"
                android:text="@string/didnt_get"
                android:layout_gravity="center"></TextView>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/bg_login_button"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/_14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/submit"></Button>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>