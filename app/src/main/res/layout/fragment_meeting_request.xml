<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background_fragment"
    tools:context="com.thriive.app.fragments.MeetingRequestFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_fragment">
        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/background_request_meeting"></ImageView>
        <ImageView
            android:id="@+id/img_stamp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/_30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/graphic_stamp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/space_transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_weight="0"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_close"></ImageView>
                <TextView
                    android:id="@+id/label_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_10dp"
                    android:textColor="@color/darkGreyBlue"
                    android:text="Meeting Request" />
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_20dp">
                    <LinearLayout
                        android:id="@+id/layout_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/darkGreyBlue"
                            android:textSize="@dimen/_17dp"
                            android:layout_margin="1dp"
                            android:text="@string/tag_reason"></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/darkGreyBlue"
                            android:textSize="@dimen/_14dp"
                            android:visibility="gone"
                            android:layout_margin="1dp"
                            android:text="Thriive connects you with the right people for the right purpose."></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_persona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_lpersona"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/darkGreyBlue"
                            android:textSize="@dimen/_16dp"
                            android:visibility="visible"
                            android:layout_margin="1dp"
                            android:text="@string/label_meeting_request"></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/darkGreyBlue"
                            android:textSize="@dimen/_14dp"
                            android:visibility="gone"
                            android:layout_margin="1dp"
                            android:text="@string/label_meeting_request1"></TextView>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/label_expertise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/darkGreyBlue"
                        android:textSize="@dimen/_17dp"
                        android:layout_margin="1dp"
                        android:visibility="gone"
                        android:text="@string/tag_expertise"></TextView>

                    <TextView
                        android:id="@+id/label_domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/darkGreyBlue"
                        android:textSize="@dimen/_17dp"
                        android:layout_margin="1dp"
                        android:visibility="gone"
                        android:text="@string/tag_domain"></TextView>

                    <TextView
                        android:id="@+id/label_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/darkGreyBlue"
                        android:textSize="@dimen/_17dp"
                        android:layout_margin="1dp"
                        android:visibility="gone"
                        android:text="@string/tag_region"></TextView>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        app:flexWrap="wrap"
                        app:alignContent="stretch"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/layout_lreason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/background_bubble"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_reason"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_12dp"
                                android:textAlignment="center"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_marginRight="@dimen/_2dp"
                                android:layout_weight="1"
                                android:text=""></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_weight="0"
                                android:layout_marginLeft="2dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_lpersona"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/background_bubble"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_persona"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_12dp"
                                android:layout_weight="01"
                                android:textAlignment="center"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_marginRight="@dimen/_2dp"
                                android:text=""></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_weight="0"
                                android:layout_marginRight="2dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_ldomain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/background_bubble"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_domains"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_12dp"
                                android:layout_weight="01"
                                android:textAlignment="center"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_marginRight="@dimen/_2dp"
                                android:text=""></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_weight="0"
                                android:layout_marginRight="2dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_lsdomain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/background_bubble"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_sdomains"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_12dp"
                                android:layout_weight="01"
                                android:textAlignment="center"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_marginRight="@dimen/_2dp"
                                android:text=""></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_weight="0"
                                android:layout_marginRight="2dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_lexpertise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:background="@drawable/background_bubble"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_expertise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/terracota"
                                android:textSize="@dimen/_12dp"
                                android:layout_weight="01"
                                android:textAlignment="center"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_marginRight="@dimen/_2dp"
                                android:text=""></TextView>
                            <ImageView
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_12dp"
                                android:layout_weight="0"
                                android:layout_marginRight="2dp"
                                android:src="@drawable/ic_edit"></ImageView>
                        </LinearLayout>

                    </com.google.android.flexbox.FlexboxLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_persona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/layout_expertise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/label_expertise1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_16dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/darkGreyBlue"
                                android:text="Expertise" />
                            <ImageView
                                android:layout_width="@dimen/_25dp"
                                android:layout_height="@dimen/_25dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/ic_search"></ImageView>
                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5dp"
                                android:visibility="gone"
                                android:textSize="@dimen/_12dp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/ic_search"
                                android:backgroundTint="#CCFFFFFF"
                                android:background="@drawable/rectangle_white"
                                android:layout_marginLeft="@dimen/_10dp"></EditText>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_expertise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/label_domain1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_16dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:textColor="@color/darkGreyBlue"
                                android:text="Domain" />
                            <EditText
                                android:id="@+id/edt_domain"
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_7dp"
                                android:textSize="@dimen/_13dp"
                                android:drawablePadding="@dimen/_5dp"
                                android:fitsSystemWindows="true"
                                android:hint="Type to search domains (e.g Fintech, Edtech)"
                                android:drawableLeft="@drawable/ic_search"
                                android:textColorHint="@color/darkGreyBlue"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_gravity="center"
                                android:background="@drawable/reactangle_grey_outline"
                                android:layout_marginLeft="@dimen/_0dp"></EditText>

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:layout_marginRight="@dimen/_5dp"
                                android:layout_marginLeft="@dimen/_20dp"></Switch>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_domain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            ></androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:id="@+id/label_noDomain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_13dp"
                            android:padding="@dimen/_25dp"
                            android:textAlignment="center"
                            android:visibility="gone"
                            android:textColor="@color/darkGrey"
                            android:text="@string/no_domain" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_subdomain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/label_subdomain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_16dp"
                                android:textColor="@color/darkGreyBlue"
                                android:text="Subdomain" />
                            <ImageView
                                android:layout_width="@dimen/_25dp"
                                android:layout_height="@dimen/_25dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_search"></ImageView>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_subdomain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_meta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/edt_meta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7dp"
                            android:textSize="@dimen/_13dp"
                            android:drawablePadding="@dimen/_5dp"
                            android:fitsSystemWindows="true"
                            android:hint="Type to search domains (e.g Fintech, Edtech)"
                            android:drawableLeft="@drawable/ic_search"
                            android:textColorHint="@color/darkGreyBlue"
                            android:fontFamily="@font/roboto_regular"
                            android:background="@drawable/reactangle_grey_outline"
                            android:layout_marginLeft="@dimen/_0dp"></EditText>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_meta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>


                        <TextView
                            android:id="@+id/label_noMeta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_14dp"
                            android:padding="@dimen/_5dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:textColor="@color/darkGreyBlue"
                            android:text="@string/no_domains" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_meta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#17000000"
                            app:cardElevation="@null"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_marginBottom="@dimen/_5dp"
                            android:layout_marginTop="@dimen/_10dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_5dp">

                                <TextView
                                    android:id="@+id/txt_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_13dp"
                                    android:padding="@dimen/_5dp"
                                    android:textColor="@color/darkGreyBlue"
                                    android:text="Select one speciality" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_metaChild"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5dp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/txt_seeMore"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_13dp"
                                    android:padding="@dimen/_5dp"
                                    android:visibility="gone"
                                    android:textAllCaps="true"
                                    android:textColor="@color/darkSeaGreen"
                                    android:text="@string/seemore" />

                                <TextView
                                    android:id="@+id/txt_seeLess"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_13dp"
                                    android:padding="@dimen/_5dp"
                                    android:visibility="gone"
                                    android:textAllCaps="true"
                                    android:textColor="@color/darkSeaGreen"
                                    android:text="@string/seeless" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>





                    </LinearLayout>
                    <TextView
                        android:id="@+id/btn_meta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="NEXT"
                        android:textColor="@color/whiteTwo"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_13dp"
                        android:paddingTop="@dimen/_7dp"
                        android:visibility="gone"
                        android:paddingBottom="@dimen/_7dp"
                        android:paddingRight="@dimen/_25dp"
                        android:paddingLeft="@dimen/_25dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:background="@drawable/bg_darkseacolor"></TextView>


                    <LinearLayout
                        android:id="@+id/layout_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:visibility="gone"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_region"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_16dp"
                                android:textColor="@color/darkGreyBlue"
                                android:text="Region" />
                            <ImageView
                                android:layout_width="@dimen/_25dp"
                                android:layout_height="@dimen/_25dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_search"></ImageView>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_region"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_meeting_preference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/label_meeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_16dp"
                                android:textColor="@color/darkGreyBlue"
                                android:text="Meeting preference" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20dp"
                            android:layout_marginBottom="@dimen/_20dp"
                            android:visibility="gone"
                            android:background="@drawable/background_expertise"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Audio"
                                android:padding="@dimen/_7dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/darkGrey"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/circle_white"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:padding="@dimen/_7dp"
                                android:text="Video"
                                android:textAlignment="center"
                                android:textColor="@color/terracota"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="In Person"
                                android:layout_weight="1"
                                android:padding="@dimen/_7dp"
                                android:textAlignment="center"
                                android:layout_marginLeft="@dimen/_20dp"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/darkGrey"></TextView>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btn_request_meeting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:layout_margin="@dimen/_20dp"
                            android:background="@drawable/filled_circle_terracota"
                            android:textColor="@color/whiteTwo"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/request_meeting"></Button>
                        <TextView
                            android:id="@+id/txt_meetingCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_13dp"
                            android:textAlignment="center"
                            android:text=""
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/_10dp"
                            android:textColor="@color/darkGrey"></TextView>
                        <TextView
                            android:id="@+id/txt_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_13dp"
                            android:visibility="visible"
                            android:layout_marginBottom="@dimen/_20dp"
                            android:textAlignment="center"
                            android:text=""
                            android:textColor="@color/darkGrey"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>