<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#14070707">
    <TextView
        android:id="@+id/txt_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_25dp"
        android:text="Close"
        android:textColor="@color/whiteTwo"
        android:textSize="@dimen/_14dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/card"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_30dp"
        android:padding="@dimen/_30dp">



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:text="Welcome, Samir"
            android:textColor="@color/whiteTwo"
            android:textSize="27dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_margin="@dimen/_10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="A quick guided tour to get you started"
            android:textColor="@color/whiteTwo"
            android:textSize="16sp" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="@dimen/_20dp"
        android:id="@+id/card"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardBackgroundColor="@color/darkSeaGreen"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titlqe"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_margin="@dimen/_5dp"
                android:layout_height="wrap_content"
                android:text="Request Meeting"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/_14dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10dp"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Skip"
                    android:textColor="@color/battleshipGrey"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_14dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    android:background="@drawable/filled_circle_grey"
                    android:layout_margin="@dimen/_5dp"
                    ></Button>


                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Next"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    android:textColor="@color/terracota"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_14dp"
                    android:background="@drawable/circle_white"
                    android:layout_margin="@dimen/_5dp"
                    ></Button>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>