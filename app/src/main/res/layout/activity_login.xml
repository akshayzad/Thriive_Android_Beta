<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/_5dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_20dp"
            android:src="@drawable/thriive"></ImageView>

        <TextView
            android:id="@+id/txt_06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Ready to Thriive"
            android:textColor="#343434"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/txt_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#343434"
            android:layout_margin="@dimen/_14dp"
            android:text="Login with" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp">
                <ImageView
                    android:id="@+id/btn_linklined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10dp"
                    android:background="@color/whiteTwo"
                    android:src="@drawable/linkedln"
                    ></ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="1dp">

                <ImageView
                    android:id="@+id/btn_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10dp"
                    android:src="@drawable/gmail"
                    ></ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/_10dp"
            android:textColor="#343434"
            android:text="or use your email provided at sign up" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_14dp"
            android:layout_marginTop="@dimen/_10dp"
            android:textColor="@color/darkGrey"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_25dp"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="1dp"

            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp">
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_14dp"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:background="@drawable/rectangle_white"></EditText>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_14dp"
            android:textColor="@color/darkGrey"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_25dp"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="1dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp">
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_14dp"
                android:hint="Password"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_white"></EditText>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:padding="2dp"
            android:background="@drawable/bg_login_button"
            android:textColor="@color/whiteTwo"
            android:textSize="@dimen/_16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Log IN"></Button>

        <TextView
            android:id="@+id/txt_forgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#5C5C62"
            android:layout_margin="@dimen/_14dp"
            android:text="Forgot password?" />

    </LinearLayout>


</RelativeLayout>