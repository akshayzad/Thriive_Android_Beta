<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkGrey">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_50dp"
            android:layout_marginLeft="@dimen/_50dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:orientation="horizontal"
                android:backgroundTint="@color/blue80"
                android:background="@drawable/rectangle_white">
                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/linkedln"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10dp"
                    app:tint="@color/whiteTwo"></ImageView>

                <Button
                    android:id="@+id/btn_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteTwo"
                    android:textSize="@dimen/_14dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/img_01"
                    android:background="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Login with Linkedin"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:backgroundTint="@color/terracota80"
                android:background="@drawable/rectangle_white">
                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/gmail"
                    android:layout_marginLeft="@dimen/_10dp"></ImageView>
                <Button
                    android:id="@+id/btn_google"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textAllCaps="false"
                    android:background="@null"
                    android:gravity="center"
                    android:layout_toRightOf="@id/img_02"
                    android:textColor="@color/whiteTwo"
                    android:textSize="@dimen/_14dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Login with Gmail"></Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/butterscotch80"
                android:background="@drawable/rectangle_white"
                >
                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_at_login"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10dp"></ImageView>
                <Button
                    android:id="@+id/btn_custom"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteTwo"
                    android:textSize="@dimen/_13dp"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_toRightOf="@id/img_03"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Login with Email"></Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/darkSeaGreen"
                android:background="@drawable/rectangle_white"
                >
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteTwo"
                    android:textSize="@dimen/_13dp"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_toRightOf="@id/img_03"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/register"></Button>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_dot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/_5dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/_20dp"
                android:src="@drawable/thriive"></ImageView>

            <TextView
                android:id="@+id/txt_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Ready to Thriive"
                android:textColor="#343434"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/txt_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#343434"
                android:layout_margin="@dimen/_14dp"
                android:text="Login with" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_5dp">
                    <ImageView
                        android:id="@+id/img_linkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10dp"
                        android:background="@color/whiteTwo"
                        android:src="@drawable/linkedln"
                        ></ImageView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_5dp"
                    app:cardCornerRadius="@dimen/_5dp"
                    app:cardElevation="1dp">

                    <ImageView
                        android:id="@+id/img_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10dp"
                        android:src="@drawable/gmail"
                        ></ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_10dp"
                android:textColor="#343434"
                android:text="or use your email provided at sign up" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/darkGrey"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_25dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="1dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp">
                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:textColor="@color/darkGrey"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_16dp"
                    android:background="@drawable/rectangle_white"></EditText>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14dp"
                android:textColor="@color/darkGrey"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="1dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp">
                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14dp"
                    android:hint="Password"
                    android:textColor="@color/darkGrey"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_16dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rectangle_white"></EditText>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:padding="2dp"
                android:background="@drawable/bg_login_button"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/_16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Log IN"></Button>

            <TextView
                android:id="@+id/txt_forgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#5C5C62"
                android:layout_margin="@dimen/_14dp"
                android:text="Forgot password?" />




        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"

        android:layout_margin="@dimen/_10dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to Thriive's"
            android:textAlignment="center"
            android:textSize="@dimen/_14dp"
            android:padding="@dimen/_1dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/darkGreyBlue"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_1dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms"
                android:textAlignment="center"
                android:textSize="@dimen/_14dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/darkGreyBlue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" and "
                android:textAlignment="center"
                android:textSize="@dimen/_14dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/darkGreyBlue"
                />
            <TextView
                android:id="@+id/txt_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy"
                android:textAlignment="center"
                android:textSize="@dimen/_14dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/darkGreyBlue"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>