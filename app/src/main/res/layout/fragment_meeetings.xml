<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.thriive.app.fragments.MeetingsFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">
                <TextView
                    android:id="@+id/txt_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_18dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/darkGrey"
                    android:text="@string/scheduled" />
                <TextView
                    android:id="@+id/txt_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_14dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/slateGrey"
                    android:text="" />
                <LinearLayout
                    android:id="@+id/layout_noSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5dp">
                    <TextView
                        android:id="@+id/txt_noSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_18dp"
                        android:padding="@dimen/_25dp"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textColor="@color/slateGrey"
                        android:text="@string/no_meeting" />
                    <TextView
                        android:id="@+id/label_noMeeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_12dp"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:textColor="@color/darkGrey"
                        android:text="@string/label_no_meeting" />

                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_scheduled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:layout_margin="5dp"></androidx.recyclerview.widget.RecyclerView>
                <com.thriive.app.utilities.scrollingpagerindicator.ScrollingPagerIndicator
                    android:id="@+id/indicator_schedule"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"></com.thriive.app.utilities.scrollingpagerindicator.ScrollingPagerIndicator>

                <TextView
                    android:id="@+id/txt_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/requested"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/_18dp" />
                <TextView
                    android:id="@+id/txt_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_14dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/slateGrey"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/layout_noRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5dp">

                    <TextView
                        android:id="@+id/txt_noRequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="@dimen/_25dp"
                        android:visibility="gone"
                        android:text="@string/no_request"
                        android:textColor="@color/slateGrey"
                        android:textSize="@dimen/_18dp" />
                    <TextView
                        android:id="@+id/label_noRequest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_12dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:textColor="@color/darkGrey"
                        android:text="@string/label_no_request" />

                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_requested"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_margin="5dp">

                </androidx.recyclerview.widget.RecyclerView>
                <com.thriive.app.utilities.scrollingpagerindicator.ScrollingPagerIndicator
                    android:id="@+id/indicator_requster"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"></com.thriive.app.utilities.scrollingpagerindicator.ScrollingPagerIndicator>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>