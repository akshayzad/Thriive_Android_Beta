<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10dp">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:src="@drawable/ic_close"></ImageView>

            <TextView
                android:id="@+id/txt_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:textColor="@color/darkGreyBlue"
                android:layout_margin="@dimen/_10dp"
                android:text="@string/rate_meeting" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10dp"
                android:numStars="5"
                android:progressTint="#F3AF48"
                android:rating="4"></RatingBar>

            <TextView
                android:id="@+id/txt_09"
                android:layout_width="150dp"
                android:background="@color/greyishBrown40"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="center"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/txt_08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:textColor="@color/darkGreyBlue"
                android:layout_margin="@dimen/_10dp"
                android:text="@string/rate_meeting1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_margin="1sp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_wanted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_margin="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_16dp"
                        android:paddingLeft="@dimen/_16dp"
                        android:textAlignment="center"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/_14dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/outline_background_rate"
                        android:text="Very Unhappy"
                        android:layout_gravity="center"></TextView>
                    <TextView
                        android:id="@+id/txt_awesome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_16dp"
                        android:paddingLeft="@dimen/_16dp"
                        android:layout_margin="@dimen/_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/_12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/outline_background_rate"
                        android:text="Unhappy"
                        android:layout_gravity="center"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_margin="1sp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_margin="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_16dp"
                        android:paddingLeft="@dimen/_16dp"
                        android:textAlignment="center"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/_12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/outline_background_rate"
                        android:text="Not sure"
                        android:layout_gravity="center"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_16dp"
                        android:paddingLeft="@dimen/_16dp"
                        android:layout_margin="@dimen/_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/_12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/outline_background_rate"
                        android:text="Happy"
                        android:layout_gravity="center"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_margin="1sp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_veryhappy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_margin="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_16dp"
                        android:paddingLeft="@dimen/_16dp"
                        android:textAlignment="center"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/_12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/outline_background_rate"
                        android:text="Very Happy"
                        android:layout_gravity="center"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>