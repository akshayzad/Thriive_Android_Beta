<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_half_circle"
    tools:context=".fragments.LoginFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10dp">

        <RelativeLayout
            android:id="@+id/layoutToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_weight="0"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"></ImageView>
            <TextView
                android:id="@+id/txt_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Ready to Thriive"
                android:textColor="@color/darkGreyBlue"
                android:textSize="21dp" />
            <TextView
                android:id="@+id/txt_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14dp"
                android:layout_below="@id/txt_06"
                android:gravity="center"
                android:textColor="@color/darkGrey"
                android:text="use your email provided at sign up" />
        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/darkGrey"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_15dp"></TextView>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:hint="Email"
                android:inputType="text"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:background="@drawable/reactangle_grey_outline"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14dp"
                android:textColor="@color/darkGrey"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_15dp"></TextView>

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:hint="Password"
                android:drawableRight="@drawable/ic_password_visibility_off"
                android:longClickable="false"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:inputType="textPassword"
                android:background="@drawable/reactangle_grey_outline"></EditText>



            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:padding="2dp"
                android:background="@drawable/filled_circle_terracota"
                android:textColor="@color/whiteTwo"
                android:textSize="@dimen/_16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Log IN"></Button>

            <TextView
                android:id="@+id/txt_forgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/darkGrey"
                android:layout_margin="@dimen/_14dp"
                android:text="Forgot Password?"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_margin="@dimen/_10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By continuing, you agree to Thriive's"
                    android:textAlignment="center"
                    android:textSize="@dimen/_13dp"
                    android:padding="@dimen/_1dp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/darkGreyBlue"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/_1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms"
                        android:textAlignment="center"
                        android:textSize="@dimen/_13dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/darkGreyBlue"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" and "
                        android:textAlignment="center"
                        android:textSize="@dimen/_13dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/darkGreyBlue"
                        />
                    <TextView
                        android:id="@+id/txt_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy"
                        android:textAlignment="center"
                        android:textSize="@dimen/_13dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/darkGreyBlue"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>