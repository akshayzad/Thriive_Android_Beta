<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10dp">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:src="@drawable/ic_close"></ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10dp"
                android:src="@drawable/meeting_request_alert"></ImageView>

            <TextView
                android:id="@+id/txt_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/darkGreyBlue"
                android:layout_margin="@dimen/_10dp"
                android:text="That's a shame. But we understand plans change." />

            <TextView
                android:id="@+id/txt_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/slateGreyTwo"
                android:layout_margin="@dimen/_10dp"
                android:text="Please provide a reason for your cancellation:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_10dp">
                <LinearLayout
                    android:id="@+id/decline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btm_noTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_14dp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_10dp"
                        android:paddingRight="@dimen/_10dp"
                        android:gravity="center"
                        android:background="@drawable/circle_white"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/terracota"
                        android:text="I can no longer make that time" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_TimeMatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_14dp"
                        android:paddingRight="@dimen/_10dp"
                        android:paddingLeft="@dimen/_10dp"
                        android:background="@drawable/filled_circle_grey"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:gravity="center"
                        android:textColor="@color/battleshipGrey"
                        android:text="They're no longer the right match" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#9A9A9A"
                android:layout_margin="@dimen/_10dp"
                android:text="Remember - only one cancellation is allowed each month." />



        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>