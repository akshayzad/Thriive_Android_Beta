<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    android:background="@drawable/rounded_background_fragment"
    tools:context=".fragments.MeetingAvailabilityFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_weight="0"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"></ImageView>
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:padding="@dimen/_10dp"
                android:textColor="@color/darkGreyBlue"
                android:text="Your Availability" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/reactangle_grey_outline"
                android:layout_margin="@dimen/_10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10dp">
                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:src="@drawable/ic_time"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:text="30-8-2020"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/darkGreyBlue"></TextView>
                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:src="@drawable/ic_calender"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:layout_margin="@dimen/_5dp"
                        android:text="09:00 - 10:00 AM"
                        android:layout_gravity="center"
                        android:textColor="@color/darkGreyBlue"></TextView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20dp"
            android:backgroundTint="@color/darkSeaGreen"
            android:background="@drawable/rectangle_grey_half_outline"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_grey_half_outline">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:src="@drawable/ic_time"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:text="30-8-2020"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/darkGreyBlue"></TextView>
                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:src="@drawable/ic_calender"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:layout_margin="@dimen/_5dp"
                        android:text="09:00 - 10:00 AM"
                        android:layout_gravity="center"
                        android:textColor="@color/darkGreyBlue"></TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_5dp"
                android:backgroundTint="@color/darkSeaGreen"
                android:background="@drawable/reactangle_grey_outline"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Edit"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:textColor="@color/whiteTwo"
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@color/darkSeaGreen"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_tarccoto_outline"
                android:layout_margin="@dimen/_10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10dp">
                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:tint="@color/terracota"
                        android:src="@drawable/ic_time"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:text="30-8-2020"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/terracota"></TextView>
                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:tint="@color/terracota"
                        android:layout_margin="@dimen/_5dp"
                        android:src="@drawable/ic_calender"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:layout_margin="@dimen/_5dp"
                        android:text="09:00 - 10:00 AM"
                        android:textColor="@color/terracota"></TextView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/filled_circle_terracota"
            android:textColor="@color/whiteTwo"
            android:textSize="@dimen/_14dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/confirm"></Button>


    </LinearLayout>

</LinearLayout>