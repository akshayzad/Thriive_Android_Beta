<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuickGuideActivity">
    <com.thriive.app.utilities.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/whiteTwo"
        android:text="@string/close"
        android:textAllCaps="true"
        android:visibility="gone"
        android:padding="@dimen/_5dp"
        android:layout_margin="@dimen/_20dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_14dp"></TextView>

    <LinearLayout
        android:id="@+id/layout_wh1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
           android:layout_marginTop="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_25dp"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/whiteTwo"
                android:text="Hey, " />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_25dp"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/whiteTwo"
                android:text="" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_16dp"
            android:textColor="@color/whiteTwo"
            android:text="@string/walk"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_wt2"
        android:padding="40dp"
        android:layout_width="200dp"
        android:layout_marginTop="80dp"
        android:background="@color/space_transparent"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_height="350dp"></ImageView>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="300dp"
        android:layout_above="@id/layoutDots"
        android:background="@color/space_transparent"
        android:layout_marginLeft="@dimen/_30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_height="150dp"></ImageView>
    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>

</RelativeLayout>