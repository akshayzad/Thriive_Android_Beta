<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetingJoinActivity">
    <RelativeLayout
        android:id="@+id/layout_answer"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="#991B2D41"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/remote_video_view_container"
            android:layout_width="match_parent"
            android:background="@drawable/sample2"
            android:layout_height="match_parent"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10dp"
            android:layout_margin="@dimen/_10dp"
            android:layout_alignParentRight="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/local_video_view_container"
                    android:layout_width="140dp"
                    android:layout_height="170dp"
                    android:visibility="visible"
                    android:background="@drawable/sample"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_above="@+id/layout_button"
            android:textSize="@dimen/_17dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular" />
        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="20"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:visibility="visible"
                    android:onClick="onLocalVideoMuteClicked"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/meeting_request" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:onClick="onLocalAudioMuteClicked"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/ic_cancel_meeting" />
                <ImageButton
                    android:id="@+id/ib_speaker"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:onClick="onSwitchSpeakerphoneClicked"
                    android:scaleType="centerInside"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_filled_video" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:onClick="onSwitchCameraClicked"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_camera" />

                <ImageView
                    android:id="@+id/iv_endCall"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:onClick="onEndCallClicked"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ggg" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>