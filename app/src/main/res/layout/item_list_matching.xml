<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="@dimen/_10dp"
        android:layout_height="match_parent"></LinearLayout>
<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_30dp"
    app:cardBackgroundColor="@color/space_white"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="2dp"
    android:outlineSpotShadowColor="@color/pale48">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/butterscotch"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.thriive.app.utilities.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0"
                    android:scaleType="centerInside"
                    android:src="@drawable/user">
                </com.thriive.app.utilities.CircleImageView>

                <TextView
                    android:id="@+id/txt_entity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="Ashish Ashraful"
                    android:textColor="@color/darkGreyBlue"
                    android:textSize="@dimen/_14dp" />

                <TextView
                    android:id="@+id/txt_designation_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:padding="1dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:text="Ashish Ashraful"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/_12dp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/color_relative_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:layout_height="110dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rv_tags">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>