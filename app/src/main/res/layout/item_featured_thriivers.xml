<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_15dp"
    android:layout_marginEnd="@dimen/_15dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.thriive.app.utilities.CircleImageView
        android:id="@+id/img_user"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        app:civ_border_color="@color/image_item_selected_for_dots"
        app:civ_border_width="@dimen/_2dp"
        android:scaleType="centerInside"
        android:src="@drawable/profile_pic_card" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/_12dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorBlack"
        android:text="Michael Thompson" />

    <TextView
        android:id="@+id/txt_designation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/_11dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorBlack"
        android:text="Product Manager" />

</LinearLayout>