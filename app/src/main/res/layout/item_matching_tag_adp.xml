<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="2dp"
    android:orientation="horizontal"
    android:id="@+id/layout_select"
    android:background="@drawable/white_outline_bg"
    android:layout_marginTop="3dp">
    <TextView
        android:id="@+id/txt_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="@dimen/_1dp"
        android:paddingBottom="@dimen/_1dp"
        android:paddingRight="@dimen/_2dp"
        android:paddingLeft="@dimen/_2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/space_white"
        android:textSize="@dimen/_12dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Borning Inc - 1 year"
        android:layout_gravity="center">
    </TextView>
</LinearLayout>
    <TextView
        android:id="@+id/txt_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="@dimen/_1dp"
        android:paddingBottom="@dimen/_1dp"
        android:paddingRight="@dimen/_2dp"
        android:paddingLeft="@dimen/_2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="@color/space_white"
        android:textSize="@dimen/_12dp"
        android:fontFamily="@font/roboto_regular"
        android:text=" + 3 more"
        android:layout_gravity="center">
    </TextView>
</LinearLayout>