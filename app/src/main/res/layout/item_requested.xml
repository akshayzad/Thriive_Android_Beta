<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@null"
    app:cardBackgroundColor="@color/pale48"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/butterscotch"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_persona"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_16dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:padding="1dp"
                            android:textColor="@color/darkGrey"
                            android:text="Business Profession" />
                        <TextView
                            android:id="@+id/txt_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_13dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:padding="1dp"
                            android:textColor="@color/darkGrey"
                            android:text="Business Profession" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/label_shortlisting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:paddingRight="@dimen/_5dp"
                        android:paddingLeft="@dimen/_5dp"
                        android:textColor="@color/darkGreyBlue"
                        android:drawableTint="@color/butterscotch"
                        android:drawablePadding="@dimen/_3dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:textSize="@dimen/_12dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_watch"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/rectangle_white"
                        android:text="@string/awaiting"
                        android:layout_gravity="right"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"></androidx.recyclerview.widget.RecyclerView>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    android:visibility="gone"
                    app:alignItems="flex_start"
                    app:maxLine="2"
                    app:alignContent="stretch"
                    android:layout_margin="@dimen/_5dp"></com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>