<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10dp">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:src="@drawable/ic_close"></ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10dp"
                android:src="@drawable/meeting_cancel"></ImageView>

            <TextView
                android:id="@+id/txt_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/darkGreyBlue"
                android:layout_margin="@dimen/_10dp"
                android:text=" Are you sure you want to cancel this meeting? " />

            <TextView
                android:id="@+id/txt_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/slateGreyTwo"
                android:layout_margin="@dimen/_10dp"
                android:text="It could be just the connection you've been waiting for." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_10dp">
                <LinearLayout
                    android:id="@+id/yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/txt_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_14dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/circle_white"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/terracota"
                        android:text="YES" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1.2"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/txt_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_14dp"
                        android:background="@drawable/filled_circle_grey"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5dp"
                        android:gravity="center"
                        android:textColor="@color/battleshipGrey"
                        android:text="NO" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#9A9A9A"
                android:layout_margin="@dimen/_10dp"
                android:text="Remember - only one cancellation is allowed each month." />



        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>